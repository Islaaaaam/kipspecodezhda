@page
@model SleekClothing.Pages.admin.users.IndexModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Список пользователей";
}
<br />
<h1>Управление пользователями</h1>
<h3 class="text-muted fw-normal">Создавайте, изменяйте и удаляйте учетные записи пользователей.</h3>
<br />

<h3>Пользователи</h3>
<p>
    <a asp-page="Create" class="btn btn-primary">Создать нового пользователя</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <div class="d-flex flex-column p-3 rounded-3 gap-1">
                        <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-info">Редактировать</a>
                        <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

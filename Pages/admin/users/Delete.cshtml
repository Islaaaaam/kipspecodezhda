@page
@model SleekClothing.Pages.admin.users.DeleteModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Удаление пользователя";
}

<h2>Удаление пользователя</h2>

<div>
    <h4>Вы уверены, что хотите удалить этого пользователя?</h4>
    <dl class="row">
        <dt class="col-sm-2">Электронная почта</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

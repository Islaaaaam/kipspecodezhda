@page
@model SleekClothing.Pages.admin.stores.DeleteModel

@{
    ViewData["Title"] = "Удалить магазин";
}

<h2>Удалить магазин</h2>

<p>Вы уверены, что хотите удалить магазин <strong>@Model.Store.Name</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="Store.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>

@using SleekClothing.Models
@model List<Store>

<h2>Магазины</h2>

<a asp-action="Create">Создать</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Адрес</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            <tr>
                <td>@store.Name</td>
                <td>@store.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@store.Id">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@store.Id">Удалить</a> |
                    <a asp-controller="StoreProducts" asp-action="Index" asp-route-storeId="@store.Id">Товары</a>
                </td>
            </tr>
        }
    </tbody>
</table>